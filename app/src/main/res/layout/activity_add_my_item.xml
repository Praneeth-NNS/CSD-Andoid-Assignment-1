<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".AddMyItem">

    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/montserrat_medium"
        android:text="Title"
        android:textColor="@color/primaryTextColor" />

    <EditText
        android:id="@+id/ettitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/view_small_margin"
        android:backgroundTint="@color/primaryLightColor"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Set a name"
        android:inputType="textPersonName"
        android:textColor="@color/primaryTextColor" />

    <TextView
        android:id="@+id/tvsubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ettitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/view_small_margin"
        android:fontFamily="@font/montserrat_medium"
        android:text="Description"
        android:textColor="@color/primaryTextColor" />

    <EditText
        android:id="@+id/etsubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsubTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/view_small_margin"
        android:backgroundTint="@color/primaryLightColor"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:hint="Write Some Description"
        android:inputType="textPersonName"
        android:textColor="@color/primaryTextColor" />

    <Button
        android:id="@+id/badd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etsubTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/button_distance"
        android:backgroundTint="@color/primaryColor"
        android:fontFamily="@font/montserrat_medium"
        android:text="Add Item"
        android:textColor="@color/primaryTextColor" />


</RelativeLayout>